<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_login"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="net.ihaha.sunny.fox.login.SignInFragment"/>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="net.ihaha.sunny.fox.login.SignUpFragment"/>

    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="net.ihaha.sunny.fox.login.ResetPasswordFragment"/>

    <action
        android:id="@+id/action_splashFragment_to_signInFragment"
        app:destination="@id/signInFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/slide_in_right"
        app:popExitAnim="@anim/slide_out_right"
        app:popUpTo="@+id/navigation_welcome"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/action_signInFragment_to_signUpFragment"
        app:destination="@id/signUpFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/slide_in_right"
        app:popExitAnim="@anim/slide_out_right"
        app:popUpTo="@+id/navigation_welcome"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/action_signInFragment_to_resetPasswordFragment"
        app:destination="@id/resetPasswordFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/slide_in_right"
        app:popExitAnim="@anim/slide_out_right"
        app:popUpTo="@+id/navigation_welcome"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/action_signUpFragment_to_signInFragment"
        app:destination="@id/signInFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/slide_in_right"
        app:popExitAnim="@anim/slide_out_right"
        app:popUpTo="@+id/navigation_welcome"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/action_resetPasswordFragment_to_signInFragment"
        app:destination="@id/signInFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/slide_in_right"
        app:popExitAnim="@anim/slide_out_right"
        app:popUpTo="@+id/navigation_welcome"
        app:popUpToInclusive="true" />

</navigation>