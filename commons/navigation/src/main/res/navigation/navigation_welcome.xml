<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_welcome"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="net.ihaha.sunny.fox.ui.welcome.WelcomeFragment"
        tools:layout="@layout/fragment_welcome">

        <action
            android:id="@+id/action_welcomeFragment_to_splashFragment"
            app:destination="@id/splashFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/navigation_welcome"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/splashFragment"
        android:name="net.ihaha.sunny.fox.ui.splash.SplashFragment"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splashFragment_to_boardingFragment"
            app:destination="@id/boardingFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/navigation_welcome"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_splashFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/navigation_welcome"
            app:popUpToInclusive="true" />
        <argument
            android:name="prefix"
            app:argType="string"
            android:defaultValue="1" />
        <action
            android:id="@+id/action_splashFragment_to_navigation_login"
            app:destination="@id/navigation_login" />

    </fragment>

    <fragment
        android:id="@+id/boardingFragment"
        android:name="net.ihaha.sunny.fox.ui.boarding.BoardingFragment"
        tools:layout="@layout/fragment_boarding">

        <action
            android:id="@+id/action_boardingFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/navigation_welcome"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_boardingFragment_to_navigation_login"
            app:destination="@id/navigation_login" />
    </fragment>
    <include app:graph="@navigation/navigation_login" />

